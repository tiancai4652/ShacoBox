<Window x:Class="ShacoBox.InputView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShacoBox"
        mc:Ignorable="d"
        Title="InputView" Height="50" Width="200" >
    <Grid>
        <Viewbox>
            <TextBlock x:Name="txtBox" Text="{Binding TimeStr}" FontFamily="Quartz MS" HorizontalAlignment="Center" VerticalAlignment="Center" ></TextBlock>
        </Viewbox>
    </Grid>
</Window>
