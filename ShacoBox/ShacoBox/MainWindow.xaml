<Window x:Class="ShacoBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShacoBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="122.141" Width="525" WindowStartupLocation="CenterScreen" AllowsTransparency="True" Background="#02FFFFFF" WindowStyle="None" ResizeMode="CanResizeWithGrip"  MouseDown="Window_MouseDown" KeyUp="Window_KeyUp" Topmost="True">
    <Border BorderBrush="AliceBlue" BorderThickness="5">
        <Grid  Margin="5">
            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center"  >
                <TextBlock FontFamily="Quartz MS" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding ShowTime}"></TextBlock>
            </Viewbox>
        </Grid>
    </Border>
</Window>
